<div class="hints" style="color:gray;">
  <% if @component.updated_at %>
    <pre>Last commit: <%= "#{@component.updated_at.utc} - #{
          @component.paper_trail.originator}\n#{@component.versions.last.commit_message}" %></pre>
  <% end %>
  <%= hints = Rosie::ComponentTypes.templates[@component.component_type][:hints];
    ERB.new(hints, nil, "%").result(binding).html_safe if hints && @component.persisted? %>
<div>
